<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="laddjones.gitsocialcalendar">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".main.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".main.MainActivity"></activity>
        <activity android:name=".main.CreateCalActivity"></activity>
        <activity android:name=".main.CreateToDoActivity"></activity>
        <activity android:name=".calendar.CalendarDayViewActivity"></activity>
        <activity android:name=".message.MessagesActivity"></activity>
        <activity android:name=".list.ToDoListActivity"></activity>

    </application>

</manifest>
