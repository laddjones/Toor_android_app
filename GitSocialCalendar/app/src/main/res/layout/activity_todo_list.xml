<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/activity_todo_list_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <android.support.v7.widget.Toolbar
        android:id="@+id/to_do_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00897b"
        app:elevation="5dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_to_do_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_ET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/my_to_do_recycler_view"
        android:layout_alignEnd="@id/my_to_do_recycler_view"
        app:elevation="5dp"
        app:useCompatPadding="true"
        app:srcCompat="@drawable/ic_add_white_24dp" />

</RelativeLayout>